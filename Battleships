from random import randint

board = []

for x in range(5):
    board.append(["O"] * 5)


def print_board(board):
    for row in board:
        print " ".join(row)


print "Let's play Battleship!"
print_board(board)


def random_row(board):
    return randint(0, len(board) - 1)


def random_col(board):

    return randint(0, len(board[0]) - 1)


ship1_row = random_row(board)
ship1_col = random_col(board)

ship2_row = random_row(board)
ship2_col = random_col(board)

ship3_row = random_row(board)
ship3_col = random_col(board)

ship4_row = random_row(board)
ship4_col = random_col(board)
#print ship_row
#print ship_col

ships_sunk = 0

for turn in range(10):

    guess_row = int(raw_input("Guess Row:"))
    guess_col = int(raw_input("Guess Col:"))

    if guess_row == ship1_row and guess_col == ship1_col:
        print "Congratulations! You sunk my battleship #1!"
        ships_sunk+=1
        if ships_sunk == 4:
            break

    elif guess_row == ship2_row and guess_col == ship2_col:
        print "Congratulations! You sunk my battleship #2!"
        ships_sunk+=1
        if ships_sunk == 4:
            break

    elif guess_row == ship3_row and guess_col == ship3_col:
        print "Congratulations! You sunk my battleship #3!"
        ships_sunk+=1
        if ships_sunk == 4:
            break

    elif guess_row == ship4_row and guess_col == ship4_col:
        print "Congratulations! You sunk my battleship #4!"
        ships_sunk+=1
        if ships_sunk == 4:
            break

    else:
        if (guess_row < 0 or guess_row > 4) or (guess_col < 0 or guess_col > 4):
            print "Oops, that's not even in the ocean."
            if turn == 9:
                print "Game Over"
        elif board[guess_row][guess_col] == "X":
            print "You guessed that one already."
            if turn == 9:
                print "Game Over"
        else:
            print "You missed my battleship!"
            board[guess_row][guess_col] = "X"
            if turn == 9:
                print "Game Over"
    print "Turn ", turn + 1

print_board(board)

